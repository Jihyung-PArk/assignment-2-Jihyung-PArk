# Create your Kivy layout in the kv language here
BoxLayout:
    orientation: 'horizontal'
    BoxLayout:
        orientation: 'vertical'
        size_hint_x: 0.3
        Label:
            text: 'Sort by:'
        BoxLayout:
            orientation:'horizontal'
            Spinner:
                id:spinner_id
                text: app.sort
                values: app.sort_by
                on_text: app.sort_value(self.text)
        Label:
            text: 'Add New Place...'
        Label:
            text: 'Name:'
        TextInput:
            id: name_input
            multiline: False
            text:''
        Label:
            text: 'Country:'
        TextInput:
            id: country_input
            multiline: False
            text:''
        Label:
            text: 'Priority:'
        TextInput:
            id: priority_input
            multiline: False
            text:''
        Button:
            id: add_place
            text: 'Add Place'
            on_press: app.add_places()
        Button:
            id: clear
            text: 'Clear'
    BoxLayout:
        orientation:'vertical'
        size_hint_x: 0.7
        BoxLayout:
            id:is_visited
            size_hint_y : 0.2
        BoxLayout:
            orientation:'vertical'
            id: list_of_place
            text: ''
        Label:
            text: app.announced
            size_hint_y: 0.2


